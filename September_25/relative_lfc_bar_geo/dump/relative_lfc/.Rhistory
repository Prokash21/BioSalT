# Load required library
library(ggplot2)
# Create the data frame
df <- data.frame(
pH = c("2", "4", "6", "7 (control)", "8"),
Log10_Mean_PFU = c(0.000000, 2.404834, 2.345700, 2.937518, 2.297396),
Std_Dev = c(0.000000, 5.291503, 11.547005, 43.312816, 5.773503)
)
# Plot the bar chart
ggplot(df, aes(x = pH, y = Log10_Mean_PFU)) +
geom_bar(stat = "identity", fill = "steelblue", width = 0.6) +
geom_errorbar(aes(ymin = Log10_Mean_PFU - 0.1, ymax = Log10_Mean_PFU + 0.1),  # Example static error bar
width = 0.2, color = "black") +
labs(title = "Log10 Mean PFU at Different pH Values",
x = "pH",
y = "Log10(Mean PFU)") +
theme_minimal()
